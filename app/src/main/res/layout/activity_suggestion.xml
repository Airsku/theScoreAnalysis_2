<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fdf0f0"
    tools:context=".SuggestionActivity">

        <RelativeLayout
            android:id="@+id/score_relative1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sugg"
            android:padding="5dp">
            <ImageButton
                android:id="@+id/jumpToLast"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:background="@drawable/sugg"
                android:layout_alignParentLeft="true"
                android:src="@drawable/double_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="建议"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/fengye"/>

        <TextView
            android:id="@+id/suggestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sugg"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="11111\n11111\n11111\n11111\n11111\n11111\n11111\n\nb"
            android:textSize="15sp"/>

</LinearLayout>