<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/score_relative1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape"
        android:padding="5dp"
        android:backgroundTint="#f5f5f5">
        <Button
            android:id="@+id/scoreRBtnJumpto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_main"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="成绩分析"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/scoreRBtnJumpto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Btn"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_main"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/shape"
            android:id="@+id/score_Rr1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/score_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89.9"
                android:textSize="40sp"
                android:layout_margin="60dp"/>

             <TextView
                 android:layout_toRightOf="@+id/score_circle"
                 android:layout_marginTop="110dp"
                 android:layout_marginLeft="30dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="总学分："
                 android:textSize="20sp"
                 android:textColor="#000000"/>
            <TextView
                android:layout_toRightOf="@+id/score_circle"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绩点："
                android:textSize="20sp"
                android:textColor="#000000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape">
            <ImageView
                android:id="@+id/IMfengge"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/fenge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="稳定性"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/IMfengge"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评级"
                android:textColor="#000000"
                android:textSize="30sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/IMfengge"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>